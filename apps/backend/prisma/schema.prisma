generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
}

enum NovelState {
    ONGOING
    FINISHED
}

model Novel {
    id          String     @id @default(uuid()) @db.Uuid
    name        String
    author      String
    description String     @db.Text
    state       NovelState @default(ONGOING)
    coverUrl    String?    @map("cover_url")
    createdAt   DateTime   @default(now()) @map("created_at") @db.Timestamptz
    updatedAt   DateTime   @updatedAt @map("updated_at") @db.Timestamptz

    chapters   Chapter[]
    categories NovelCategory[]

    @@map("novels")
}

model Chapter {
    id        String   @id @default(uuid()) @db.Uuid
    novelId   String   @map("novel_id") @db.Uuid
    title     String?
    content   String   @db.Text
    filename  String
    createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz
    updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz

    novel Novel @relation(fields: [novelId], references: [id], onDelete: Cascade)

    @@index([novelId], name: "IDX_chapters_novel")
    @@map("chapters")
}

model Category {
    id        String   @id @default(uuid()) @db.Uuid
    name      String   @unique
    createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz
    updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz

    novels NovelCategory[]

    @@map("categories")
}

model NovelCategory {
    novelId    String @map("novel_id") @db.Uuid
    categoryId String @map("category_id") @db.Uuid

    novel    Novel    @relation(fields: [novelId], references: [id], onDelete: Cascade)
    category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

    @@id([novelId, categoryId])
    @@index([novelId], name: "IDX_novel_categories_novel")
    @@index([categoryId], name: "IDX_novel_categories_category")
    @@map("novel_categories")
}
