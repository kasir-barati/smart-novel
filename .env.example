# Backend Configuration
PORT=3000
NODE_ENV=development
CORS_ALLOWED_ORIGINS=http://localhost:4200,
LOG_LEVEL=debug
LOG_MODE=PLAIN_TEXT

# Frontend Configuration
FRONTEND_PORT=4200
VITE_SERVICE_URL=http://localhost:3000

# Ollama Configuration
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2:1b
OLLAMA_TIMEOUT=30s
OLLAMA_CACHE_TTL=12h
OLLAMA_RETRY_COUNT=3
OLLAMA_RETRY_DELAY=1s

# PostgreSQL Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=smart_novel
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# PGAdmin Configuration
PGADMIN_EXPOSED_PORT=5050

# Redis Configuration (passwordless for local dev, set password for production)
REDIS_URL=redis://redis:6379
# REDIS_PASSWORD=
REDIS_MAXMEMORY_POLICY=allkeys-lfu
REDIS_PORT=6379
